<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid">
            <header class="row header-bg p-3">
                <div class="col-4 text-center">
                    <a href='#'><img src="{{asset('images/logo.png')}}" width="100"/></a>
                </div>
                <div class="col-3 text-end text-white">
                <input type="hidden" class="form-control" placeholder="Search">
                </div>
                <div class="col-5 text-end text-white">
                    
                    {% if is_granted('ROLE_ADMIN')%}
                        <div class="navbar navbar-expand-lg w-100 navbar-light mt-4 text-end">
                            <ul class="navbar-nav me-auto mt-1 mb-0 mb-lg-0 m-auto">
                                <li class="nav-item">
                                    <a class="nav-link active text-white" aria-current="page" href="{{ path('app_site_index') }}">
                                        Site
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="#">Utilisateurs</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active text-white" aria-current="page" href="{{path('app_evenements_index')}}">
                                    Evenement
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="{{path('app_type_evenements_index')}}">déclencheur</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active text-white" aria-current="page" href="{{ path('app_la_ronde_index') }}">
                                         Ronde
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="{{path('app_pointaux_index')}}">Pointaux</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="{{path('app_logout')}}">Deconnexion</a>
                                </li>
                            </ul>
                        </div
                    {% else %}
                        <h3 class='text-end'>Golden France Formation</h3>
                        <h4 class='text-end'>Centre de Formation</h4>
                        <ul class="navbar-nav me-auto mt-1 mb-0 mb-lg-0 m-auto">
                            <li class="nav-item">
                                <a class="nav-link text-white" href="{{path('app_logout')}}">Deconnexion</a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </header>
        
        {% block body %}{% endblock %}
        </div>
    
    </body>
</html>
