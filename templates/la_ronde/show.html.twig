{% extends 'base.html.twig' %}

{% block title %}LaRonde{% endblock %}

{% block body %}
    <h1 class="display-1">La Ronde #{{ la_ronde.id }} </h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ la_ronde.id }}</td>
            </tr>
            <tr>
                <th>Date de debut</th>
                <td>{{ la_ronde.dateDebut ? la_ronde.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ la_ronde.dateFin ? la_ronde.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nom du site</th>
                <td>{{ la_ronde.site.nom }}</td>
            </tr>
            {% set count =1 %}
            {% for groupage in groupages %}
            <tr>
                <th>Evenement {{count}}</th>
                <td>
                    {{groupage.evenement.heure|date('H:i')}} {{groupage.evenement.observation}}
                </td>
            </tr>
            {% set count = count +1 %}
            {% endfor %}
        </tbody>
    </table>

    <a class="m-e-3 text-decoration-none" href="{{ path('app_la_ronde_index') }}">
        <img src="{{asset('images/previous.png')}}" width="35" title="Les rondes" alt="revenir aux rondes"/>
    </a>
    
    {% if is_granted('ROLE_ADMIN')%}
    <a class="m-e-3 text-decoration-none" href="{{ path('app_la_ronde_edit', {'id': la_ronde.id}) }}">
        <img src="{{asset('images/editing.png')}}" width="25" title="details" alt="details"/>
    </a>
    {{ include('la_ronde/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
