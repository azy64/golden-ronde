{% extends 'base.html.twig' %}

{% block title %}Pointaux index{% endblock %}

{% block body %}
    <h1>Pointaux index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Logitude</th>
                <th>Latitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pointaux in pointauxes %}
            <tr>
                <td>{{ pointaux.id }}</td>
                <td>{{ pointaux.libelle }}</td>
                <td>{{ pointaux.logitude }}</td>
                <td>{{ pointaux.latitude }}</td>
                <td>
                    <a href="{{ path('app_pointaux_show', {'id': pointaux.id}) }}">show</a>
                    <a href="{{ path('app_pointaux_edit', {'id': pointaux.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a title="Creer un pointau" class="header-bg p-2 btn-golden fs-3" href="{{ path('app_pointaux_new') }}">+</a>
{% endblock %}
