{% extends 'base.html.twig' %}

{% block title %}Site index{% endblock %}

{% block body %}
    <h1 class="display-1">Site index</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td>{{ site.id }}</td>
                <td>{{ site.nom }}</td>
                <td>{{ site.adresse }}</td>
                <td>
                    <a class="p-3 text-decoration-none" href="{{ path('app_site_show', {'id': site.id}) }}">
                        <img src="{{asset('images/view.png')}}" width="35" title="visualiser" alt="visualiser"/>
                    </a>
                    <a class="p-3 text-decoration-none" href="{{ path('app_site_edit', {'id': site.id}) }}">
                        <img src="{{asset('images/editing.png')}}" width="35" title="editer" alt="editer"/>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn-golden header-bg fs-4 text-white" href="{{ path('app_site_new') }}" title="Ajouter une nouveau site">+</a>
{% endblock %}
