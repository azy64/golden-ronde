{% extends 'base.html.twig' %}

{% block title %}Site{% endblock %}

{% block body %}
    <h1 class="display-1">Site</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ site.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ site.adresse }}</td>
            </tr>
        </tbody>
    </table>

    <a class="p-3 text-decoration-none" href="{{ path('app_site_index') }}">
        <img src="{{asset('images/previous.png')}}" width="35" title="retour" alt="retour"/>
    </a>

    <a class="text-decoration-none" href="{{ path('app_site_edit', {'id': site.id}) }}">
         <img src="{{asset('images/editing.png')}}" width="35" title="editer" alt="editer"/>
    </a>

    {{ include('site/_delete_form.html.twig') }}
{% endblock %}
